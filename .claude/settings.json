{
  "permissions": {
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pylint-check.sh"
          }
        ]
      }
    ]
  }
}
