{
    /* Exclusions */
    "search.exclude": {
        "**/.venv": true,
        "**/venv*": true,
        "plan/macgarden/Crystal.app": true,
        "setup/build/**": true,
        "setup/dist/**": true,
    },
    "python.analysis.exclude": [
        ".git",
        "**/__pycache__",
        "**/.*",
        "**/.venv",
        "**/node_modules",
        "**/venv*",
        "setup/build",
        "setup/dist",
    ],
    
    /* Terminal */
    /* Don't inject OSC 633 sequences into Python REPLs. Causes test failures. */
    "python.terminal.shellIntegration.enabled": false,
    
    /* Pylint: Enable */
    "pylint.enabled": true,
}